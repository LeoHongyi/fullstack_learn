{
    "name": "blogleo",
    "version": "0.1.0",
    "private": true,
    "prisma": {
        "schema": "src/database/schema",
        "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} -r tsconfig-paths/register src/database/seed/index.ts"
    },
    "scripts": {
        "------------------ app command": "----",
        "dev": "next dev",
        "build": "next build",
        "start": "next start",
        "------------------ lint command": "----",
        "lint": "pnpm lint:es && pnpm lint:style",
        "lint:es": "next lint --fix",
        "lint:style": "stylelint \"**/*.css\" --fix --cache --cache-location node_modules/.cache/stylelint/",
        "------------------ ui command": "----",
        "addsc": "pnpm dlx shadcn-ui@latest add -c ./src/app",
        "------------------ db command": "----",
        "dbg": "cross-env NODE_ENV=development prisma generate",
        "dbp": "cross-env NODE_ENV=development prisma db push",
        "dbmc": "cross-env NODE_ENV=development prisma migrate dev --create-only --skip-generate",
        "dbm": "cross-env NODE_ENV=development prisma migrate dev --skip-seed",
        "dbmr": "cross-env NODE_ENV=development prisma migrate reset -f --skip-seed",
        "dbms": "cross-env NODE_ENV=development prisma migrate dev",
        "dbmrs": "cross-env NODE_ENV=development prisma migrate reset -f",
        "dbmd": "cross-env NODE_ENV=production prisma migrate deploy",
        "dbs": "prisma db seed",
        "dbo": "prisma studio"
    },
    "dependencies": {
      "@eslint/js": "^9.9.0",
      "@faker-js/faker": "^8.4.1",
      "@hookform/resolvers": "^3.9.0",
      "@mdx-js/loader": "^3.0.1",
      "@mdx-js/react": "^3.0.1",
      "@next/mdx": "^14.2.5",
      "@prisma/client": "5.18.0",
      "@radix-ui/react-alert-dialog": "^1.1.1",
      "@radix-ui/react-dialog": "^1.1.1",
      "@radix-ui/react-icons": "^1.3.0",
      "@radix-ui/react-label": "^2.1.0",
      "@radix-ui/react-slot": "^1.1.0",
      "@types/eslint__js": "^8.42.3",
      "@types/mdx": "^2.0.13",
      "@vavt/cm-extension": "^1.5.0",
      "class-variance-authority": "^0.7.0",
      "clsx": "^2.1.1",
      "deepmerge": "^4.3.1",
      "lodash": "^4.17.21",
      "md-editor-rt": "^4.18.0",
      "micromatch": "^4.0.7",
      "next": "14.2.5",
      "next-mdx-remote": "^5.0.0",
      "prism-themes": "^1.9.0",
      "prisma-paginate": "^5.2.1",
      "prismjs": "^1.29.0",
      "react": "^18.3.1",
      "react-dom": "^18.3.1",
      "react-hook-form": "^7.52.2",
      "react-use": "^17.5.1",
      "rehype-prism-plus": "^2.0.0",
      "tailwind-merge": "^2.4.0",
      "tailwindcss-animate": "^1.0.7",
      "uuid": "^10.0.0",
      "zod": "^3.23.8"
  },
  "devDependencies": {
      "@types/lodash": "^4.17.7",
      "@types/micromatch": "^4.0.9",
      "@types/node": "^22.2.0",
      "@types/react": "^18.3.3",
      "@types/react-dom": "^18.3.0",
      "@types/uuid": "^10.0.0",
      "@typescript-eslint/eslint-plugin": "^8.0.1",
      "@typescript-eslint/parser": "^8.0.1",
      "autoprefixer": "^10.4.20",
      "cross-env": "^7.0.3",
      "eslint": "^8.57.0",
      "eslint-config-airbnb": "^19.0.4",
      "eslint-config-airbnb-typescript": "^18.0.0",
      "eslint-config-next": "^14.2.5",
      "eslint-config-prettier": "^9.1.0",
      "eslint-plugin-import": "^2.29.1",
      "eslint-plugin-jsx-a11y": "^6.9.0",
      "eslint-plugin-prettier": "^5.2.1",
      "eslint-plugin-react": "^7.35.0",
      "eslint-plugin-react-hooks": "^4.6.2",
      "eslint-plugin-unused-imports": "3.2.0",
      "jest": "^29.7.0",
      "postcss": "^8.4.41",
      "postcss-import": "^16.1.0",
      "postcss-mixins": "^10.0.1",
      "postcss-nested": "^6.2.0",
      "postcss-nesting": "^13.0.0",
      "prettier": "^3.3.3",
      "prisma": "^5.18.0",
      "react-icons": "^5.2.1",
      "rimraf": "^6.0.1",
      "stylelint": "^16.8.1",
      "stylelint-config-css-modules": "^4.4.0",
      "stylelint-config-recess-order": "^5.0.1",
      "stylelint-config-standard": "^36.0.1",
      "stylelint-prettier": "^5.0.2",
      "tailwindcss": "^3.4.9",
      "ts-node": "^10.9.2",
      "tsconfig-paths": "^4.2.0",
      "typescript": "^5.5.4"
  },
    "pnpm": {
        "updateConfig": {
            "ignoreDependencies": [
                "eslint",
                "eslint-plugin-unused-imports"
            ]
        },
        "peerDependencyRules": {
            "allowAny": [
                "eslint",
                "@typescript-eslint/*"
            ]
        }
    }
}
